<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondon"
    tools:context=".Pantalla2Activity">


    <TextView
        android:id="@+id/txt_pantalla2_titulo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/pantalla2_titulo1"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_codigo"
        android:layout_width="235dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/codigo"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:autofillHints="@string/codigo"
        app:layout_constraintStart_toStartOf="@+id/txt_pantalla2_titulo1"
        app:layout_constraintTop_toBottomOf="@+id/txt_pantalla2_titulo1" />

    <Button
        android:id="@+id/bt_aplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aplicar"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_codigo"
        app:layout_constraintEnd_toEndOf="@+id/txt_pantalla2_titulo1" />
</androidx.constraintlayout.widget.ConstraintLayout>